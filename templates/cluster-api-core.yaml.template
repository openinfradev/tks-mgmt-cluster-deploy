apiVersion: operator.cluster.x-k8s.io/v1alpha2
kind: CoreProvider
metadata:
  name: cluster-api
  namespace: capi-system
spec:
  configSecret:
    name: tks-capi-variables
    namespace: default
  version: $CAPI_VERSION
  deployment:
    containers:
    - name: manager
      imageUrl: "$CAPI_MANAGER_IMAGE"
  fetchConfig:
    selector:
      matchLabels:
        provider-components: capi-core
